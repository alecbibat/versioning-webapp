<link rel="stylesheet" href="/styles.css" />

<h2>📄 <%= document.title %> — <%= location.charAt(0).toUpperCase() + location.slice(1) %></h2>

<p><strong>Prepared by:</strong> <%= document.preparedBy || 'N/A' %></p>
<p><strong>Date:</strong> <%= document.date || 'N/A' %></p>

<h3>Incident Information</h3>
<p><strong>Incident Name (202):</strong> <%= document.incidentName202 || 'N/A' %></p>
<p><strong>Incident Objectives (202):</strong> <%= document.incidentObjective202 || 'N/A' %></p>
<p><strong>Incident Briefing (201):</strong> <%= document.incidentBriefing201 || 'N/A' %></p>
<p><strong>Situation Summary (201):</strong> <%= document.situationSummary201 || 'N/A' %></p>

<h3>Action Plan</h3>
<table>
  <thead>
    <tr>
      <th>Objective</th>
      <th>Strategy</th>
      <th>Resources</th>
      <th>Assigned</th>
    </tr>
  </thead>
  <tbody>
    <% if (document.actionPlan && Array.isArray(document.actionPlan)) { %>
      <% document.actionPlan.forEach(row => { %>
        <tr>
          <td><%= row.objective || '' %></td>
          <td><%= row.strategy || '' %></td>
          <td><%= row.resource || '' %></td>
          <td><%= row.assigned || '' %></td>
        </tr>
      <% }) %>
    <% } else { %>
      <tr><td colspan="4">No action plan available</td></tr>
    <% } %>
  </tbody>
</table>

<a href="/locations/<%= location %>">← Back to Location Dashboard</a>
