<link rel="stylesheet" href="/styles.css" />

<h1>Location Document Manager</h1>
<p>Select a location:</p>

<ul style="list-style: none; padding: 0;">
  <% const locations = [
    'yellowstone',
    'death valley',
    'glacier',
    'rocky mountain',
    'mount rushmore',
    'grand canyon south rim',
    'grand canyon railway'
  ]; %>

  <% locations.forEach(loc => { %>
    <li style="margin-bottom: 10px;">
      <form method="GET" action="/locations/<%= encodeURIComponent(loc) %>">
        <button type="submit"><%= loc.replace(/\b\w/g, l => l.toUpperCase()) %></button>
      </form>
    </li>
  <% }) %>
</ul>

<hr>

<h2>Document Tools</h2>
<ul style="list-style: none; padding: 0;">
  <li style="margin: 6px 0;"><a href="/new">➕ Create New Document</a></li>
  <li style="margin: 6px 0;"><a href="/history">📜 View History</a></li>
  <% if (latest && latest.id) { %>
    <li style="margin: 6px 0;"><a href="/view/<%= latest.id %>">👁️ View Latest</a></li>
    <li style="margin: 6px 0;"><a href="/edit/<%= latest.id %>">✏️ Edit Latest</a></li>
  <% } else { %>
    <li style="margin: 6px 0;"><em>No versions yet to view or edit.</em></li>
  <% } %>
</ul>
