<link rel="stylesheet" href="/styles.css" />

<h2>âœï¸ Edit Document â€” <%= location.charAt(0).toUpperCase() + location.slice(1) %></h2>

<form method="POST" action="/edit/<%= document.id %>">
  <input type="hidden" name="location" value="<%= location %>" />

  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="<%= document.title || '' %>" required />

  <label for="preparedBy">Prepared By:</label>
  <input type="text" id="preparedBy" name="preparedBy" value="<%= document.preparedBy || '' %>" />

  <label for="date">Date:</label>
  <input type="date" id="date" name="date" value="<%= document.date || '' %>" />

  <label for="incidentName202">Incident Name (202):</label>
  <input type="text" id="incidentName202" name="incidentName202" value="<%= document.incidentName202 || '' %>" />

  <label for="incidentObjective202">Incident Objectives (202):</label>
  <textarea id="incidentObjective202" name="incidentObjective202"><%= document.incidentObjective202 || '' %></textarea>

  <label for="incidentBriefing201">Incident Briefing (201):</label>
  <textarea id="incidentBriefing201" name="incidentBriefing201"><%= document.incidentBriefing201 || '' %></textarea>

  <label for="situationSummary201">Situation Summary (201):</label>
  <textarea id="situationSummary201" name="situationSummary201"><%= document.situationSummary201 || '' %></textarea>

  <h3>Action Plan</h3>
  <table>
    <thead>
      <tr>
        <th>Objective</th>
        <th>Strategy</th>
        <th>Resources</th>
        <th>Assigned</th>
      </tr>
    </thead>
    <tbody>
      <% if (document.actionPlan && Array.isArray(document.actionPlan)) { %>
        <% document.actionPlan.forEach((item, i) => { %>
          <tr>
            <td><input name="objectives" value="<%= item.objective || '' %>" /></td>
            <td><input name="strategies" value="<%= item.strategy || '' %>" /></td>
            <td><input name="resources" value="<%= item.resource || '' %>" /></td>
            <td><input name="assigned" value="<%= item.assigned || '' %>" /></td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr><td colspan="4">No action plan data available.</td></tr>
      <% } %>
    </tbody>
  </table>

  <button type="submit">ğŸ’¾ Save Changes</button>
</form>

