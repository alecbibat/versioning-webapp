<link rel="stylesheet" href="/styles.css" />

<h2><%= location.replace(/\b\w/g, l => l.toUpperCase()) %> — Dashboard</h2>

<ul style="list-style: none;">
  <li style="margin: 10px 0;">
    <form method="GET" action="/locations/<%= encodeURIComponent(location) %>/new">
  <button type="submit">➕ Create New Document</button>
</form>

  </li>
  <li style="margin: 10px 0;">
    <% if (versions.length > 0) { %>
      <form method="GET" action="/view/<%= versions[0].id %>">
        <button type="submit">👁️ View Latest Version</button>
      </form>
    <% } else { %>
      <button disabled>No Versions to View</button>
    <% } %>
  </li>
  <li style="margin: 10px 0;">
    <% if (versions.length > 0) { %>
      <form method="GET" action="/edit/<%= versions[0].id %>">
        <button type="submit">✏️ Edit Latest Version</button>
      </form>
    <% } else { %>
      <button disabled>No Versions to Edit</button>
    <% } %>
  </li>
  <li style="margin: 10px 0;">
    <form method="GET" action="/history">
      <button type="submit">📜 View History</button>
    </form>
  </li>
</ul>

<a href="/">← Back to Locations</a>
